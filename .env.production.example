# Production Environment Configuration for AWS Deployment
# Copy this to .env on your EC2 instance and fill in your actual values

# ============================================
# Google Gemini API
# ============================================
GOOGLE_API_KEY=your_gemini_api_key_here

# ============================================
# AWS Configuration
# ============================================
AWS_REGION=us-east-1
AWS_S3_BUCKET=ashoka-ai1-s3
AWS_S3_PREFIX=all_data/
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# ============================================
# DynamoDB Configuration
# ============================================
DYNAMODB_TABLE=ashoka_contentint
DYNAMODB_REGION=us-east-1
DYNAMODB_USERS_TABLE=ashoka_contentint
DYNAMODB_SESSIONS_TABLE=ashoka_contentint
DYNAMODB_CONTENT_TABLE=ashoka_contentint

# Use real DynamoDB in production
USE_REAL_DYNAMODB=true

# ============================================
# Application Configuration
# ============================================
ENVIRONMENT=production
DEBUG=False

# Generate a random secret key (use: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your_secret_key_here_generate_random_string

# ============================================
# NiceGUI Configuration
# ============================================
NICEGUI_HOST=0.0.0.0
NICEGUI_PORT=8080
NICEGUI_RELOAD=False
NICEGUI_STORAGE_SECRET=your_storage_secret_here

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FILE=/var/log/ashoka/app.log

# ============================================
# Security Configuration
# ============================================
# Session timeout in minutes
SESSION_TIMEOUT=30

# Maximum file upload size in MB
MAX_UPLOAD_SIZE=100

# Allowed file extensions
ALLOWED_EXTENSIONS=txt,pdf,docx,jpg,png,gif,mp3,wav,mp4

# ============================================
# Performance Configuration
# ============================================
# Number of worker processes (usually number of CPU cores)
WORKERS=2

# Request timeout in seconds
REQUEST_TIMEOUT=300
